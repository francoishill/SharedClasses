<Window x:Class="SharedClasses.ChooseFromList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Choose an item"
        Height="179"
        Width="396"
        WindowStartupLocation='CenterScreen'>
    <Grid Margin='10'>
        <Grid.RowDefinitions>
            <RowDefinition Height='34' />
            <RowDefinition />
            <RowDefinition Height='30' />
        </Grid.RowDefinitions>
        <Label Grid.Row='0'
               Name='labelUserMessage'
               FontSize='14'
               Foreground='Green'>Please select one of the following:</Label>
        <ComboBox Grid.Row='1'
                  Name='comboBoxList'
                  VerticalAlignment='Top'
                  HorizontalAlignment='Left'
                  Width='261'
                  IsEditable='True' />
        <StackPanel Grid.Row='2'
                    Orientation='Horizontal'
                    VerticalAlignment='Center'
                    HorizontalAlignment='Right'>
            <Button Padding='10 5'
                    Click='buttonCancel_Click'>C_ancel</Button>
            <Button Padding='10 5'
                    Margin='10 0 0 0'
                    Click='buttonOK_Click'>O_k</Button>
        </StackPanel>
    </Grid>
</Window>
